@model Honey
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-3">
      
            <div class="col-md-12">
                <img src="~/images/@Model.Image" alt="@Model.Name" class="img-fluid" id="imageBox" />
            </div>
        </div>

    </div>
    <div class="col-9">

    <h1 class="mb-3">@Model.Name  </h1>
    <hr />
    
    <div class="mb-3">
        <h4 class="text-primary mb-3">@Model.Price TL</h4>
        @if (User.Identity.IsAuthenticated)
        {
            <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline">
                <input type="hidden" name="honeyId" value="@Model.Id">
                <div class="input-group mb-3">
                    <input type="number" name="quantity" id="quantity" value="1" min="1" step="1" style="width:100px" onclick="total()">
                    <button type="submit" class="btn btn-primary float-end">AddToCart</button>
                </div>


            </form>
        }
    </div>
    </div>

</div>





<div class="row">
    <div class="col-md-12">
        <p class="p-3">
            @Html.Raw(Model.Decription)
        </p>
    </div>
</div>